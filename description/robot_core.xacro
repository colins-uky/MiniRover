<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="magenta">
        <color rgba="1 0 1 1" />
    </material>

    <link name="world_link">

    </link>

    <joint name="world_to_base_joint" type="fixed">
        <parent link="world_link" />
        <child link="base_link" />
        <origin xyz="0 0 0.02" />
    </joint>
    
    <link name="base_link">
        
    </link>

    <!-- CHASSIS -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0.05" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.02" />
            <geometry>
                <box size="0.266 0.229 0.064" />
            </geometry>
            <material name="white" />
        </visual>

        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.266 0.229 0.064" />
            </geometry>
            
        </collision>
        <xacro:inertial_box mass="2.0" x="0.266" y="0.229" z="0.064">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- FRONT LEFT WHEEL -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_left_wheel" />
        <origin xyz="0.115 0.135 0.07" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.057" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.057" length="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.057">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>




    <!-- FRONT RIGHT WHEEL -->

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_right_wheel" />
        <origin xyz="0.115 -0.135 0.07" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.057" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.057" length="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.057">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- BACK LEFT WHEEL -->

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_left_wheel" />
        <origin xyz="-0.115 0.145 0.07" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.057" length="0.06" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.057" length="0.06" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.15" length="0.06" radius="0.057">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- BACK RIGHT WHEEL -->

    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_right_wheel" />
        <origin xyz="-0.115 -0.145 0.07" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.057" length="0.06" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.057" length="0.06" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.15" length="0.06" radius="0.057">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- WiFi Antennas-->

    <joint name="antenna_1_joint" type="fixed">
        <parent link="base_link" />
        <child link="antenna_1" />
        <origin xyz="0.06 0.09 0.13" />
        
    </joint>

    <link name="antenna_1">
        <visual>
            <geometry>
                <cylinder radius="0.007" length="0.18" />
            </geometry>
            <material name="white" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.007" length="0.18" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.01" length="0.18" radius="0.007">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="antenna_1">
        <material>Gazebo/White</material>
    </gazebo>

    <joint name="antenna_2_joint" type="fixed">
        <parent link="base_link" />
        <child link="antenna_2" />
        <origin xyz="0.03 0.09 0.13" />
        
    </joint>

    <link name="antenna_2">
        <visual>
            <geometry>
                <cylinder radius="0.007" length="0.18" />
            </geometry>
            <material name="white" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.007" length="0.18" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.01" length="0.18" radius="0.007">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="antenna_2">
        <material>Gazebo/White</material>
    </gazebo>


    
    
</robot>